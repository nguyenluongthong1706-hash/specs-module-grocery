// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Bảng Người dùng (Chủ cửa hàng)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Sẽ lưu mật khẩu đã mã hóa
  fullName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Bảng Loại sản phẩm
model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique // Tên loại không trùng nhau
  description String?
  products    Product[] // Quan hệ: 1 Loại có nhiều Sản phẩm
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// 3. Bảng Sản phẩm
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal  @db.Decimal(10, 2) // Giá tiền (VD: 10000.00)
  image       String?  // Link ảnh
  description String?
  stock       Int      @default(0) // Số lượng tồn kho
  
  // Quan hệ với Category
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}